{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": ["svelte3", "prettier", "import"],
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        // "prettier"
    ],
    "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
    "rules": {
        "strict": 0,
        "no-console": "warn",
        "no-plusplus": "warn",
        "no-unused-expressions": "off",
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "prefer-const": ["warn"],
        "import/order": [
            "warn",
            {
                "newlines-between": "always"
            }
        ],
        "import/prefer-default-export": "off",
        // "prettier/prettier": "warn"
    }
}
